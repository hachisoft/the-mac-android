<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="bottom"
    android:background="@color/primary_dark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        style="@style/ActionButtonLayout">

        <ToggleButton
                android:id="@+id/btnMyAccount"
                style="@style/ActionButton"
                android:textOn="@string/my_account"
                android:textOff="@string/my_account"
                android:drawableTop="@drawable/btn_myaccount"/>

        <ToggleButton
            android:id="@+id/btnBill"
            style="@style/ActionButton"
            android:textOn="@string/bill"
            android:textOff="@string/bill"
            android:drawableTop="@drawable/btn_bill"/>

        <ToggleButton
            android:id="@+id/btnTennisCourts"
            style="@style/ActionButton"
            android:textOn="@string/tennis_courts"
            android:textOff="@string/tennis_courts"
            android:drawableTop="@drawable/btn_tennis"/>

        <ToggleButton
            android:id="@+id/btnFind"
            style="@style/ActionButton"
            android:textOn="@string/find_event"
            android:textOff="@string/find_event"
            android:drawableTop="@drawable/btn_find"/>

        <ToggleButton
            android:id="@+id/btnMore"
            style="@style/ActionButton"
            android:textOn="@string/more"
            android:textOff="@string/more"
            android:drawableTop="@drawable/btn_more"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/primary"/>
</android.support.v7.widget.Toolbar>