<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/UIButton"
        android:padding="10dp"
        android:text="Complete Registration"
        android:layout_margin="5dp"/>
    <CheckBox
        android:id="@+id/cb_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree with waiver &amp; consent to treat statement"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/light_gray"
        android:text="Member Registrations"
        android:padding="10dp"
        android:gravity="center"/>
    <ListView
        android:id="@+id/lv_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/light_gray"
        android:text="Guest Registrations"
        android:padding="10dp"
        android:gravity="center"/>
    <ListView
        android:id="@+id/lv_guests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total: $0.00"
        android:gravity="right"
        android:padding="5dp"/>
</LinearLayout>