<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mac.themac.activity.Bill">

    <fragment android:name="com.mac.themac.fragment.CurrentCharges"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_action_bar"/>

    <include android:id="@+id/bottom_action_bar"
        layout="@layout/bottom_action_bar"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
